<?xml version='1.0' encoding='utf-8'?>
<widget id="nl.wieskamp.puzzeltocht" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="LocationManager">
        <param name="android-package" value="com.unarin.cordova.beacon.LocationManager" />
    </feature>
    <feature name="LocalNotification">
        <param name="android-package" value="de.appplant.cordova.plugin.localnotification.LocalNotification" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="ldpi" src="res/android/mipmap-ldpi/ic_launcher.png" />
    <icon density="mdpi" src="res/android/mipmap-mdpi/ic_launcher.png" />
    <icon density="hdpi" src="res/android/mipmap-hdpi/ic_launcher.png" />
    <icon density="xhdpi" src="res/android/mipmap-xhdpi/ic_launcher.png" />
    <icon density="xxhdpi" src="res/android/mipmap-xxhdpi/ic_launcher.png" />
    <icon density="xxxhdpi" src="res/android/mipmap-xxxhdpi/ic_launcher.png" />
    <name>Wieskamp Puzzeltocht</name>
    <description>
        Vind met deze app alle iBeacons die zijn verstopt op de camping.
    </description>
    <author email="rob@wieskamp.nl" href="http:www.wieskamp.nl">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://*/*" />
</widget>
